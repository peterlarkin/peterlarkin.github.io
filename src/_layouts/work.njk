---
layout: default
bodyClass: entry
---

<div class="entry__container" id="js-ajax-content">
  <div class="entry__info">
    <h2>{{ title }}</h2>
    <hr>
    <h3 class="label">Client</h3>
    <p>{{ client }}</p>
    <h3 class="label">Agency</h3>
    <p>{{ agency }}</p>
    <h3 class="label">Role</h3>
    <p>{{ role }}</p>
  </div>

  <div class="entry__main">

    <div class="glide">
      <div class="glide__track" data-glide-el="track">
        <ul class="glide__slides">
          {% for image in images %}
          <li class="glide__slide">
            {% image image[0], image[1] %}
          </li>
          {% endfor %}
        </ul>
      </div>
      <div class="glide__controls">
        <div class="glide__bullets" data-glide-el="controls[nav]">
          {% for image in images %}
          <button class="glide__bullet" data-glide-dir="={{ loop.index0 }}"></button>
          {% endfor %}
        </div>
        <div class="glide__arrows" data-glide-el="controls">
          <button class="glide__arrow glide__arrow--left" data-glide-dir="<">
            {% include "../_svgs/icon-large-arrow-left.svg" %}
          </button>
          <button class="glide__arrow glide__arrow--right" data-glide-dir=">">
            {% include "../_svgs/icon-large-arrow-right.svg" %}
          </button>
        </div>
      </div>
    </div>

    <div class="entry__text">
      {{ content | safe }}
    </div>
  </div>
</div>
